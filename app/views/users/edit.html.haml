.header
  .header__text
    WORKER
  = link_to destroy_user_session_path, method: :delete do
    <i class="fas fa-sign-out-alt"></i>
.main
  .account-page
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h5 アカウントの編集
      .account-page__inner--right.user-form
        = form_for(current_user) do |f|
          .field
            .field-label
              = f.label :name
            .field-input
              = f.text_field :name, autofocus: true, class: 'field-input__text'
          .field
            .field-label
              = f.label :email
            .field-input
              = f.email_field :email ,class: 'field-input__text'
          .actions
            = f.submit "更新する", class: 'btn'
      = link_to "戻る", :back, class: "btn"

